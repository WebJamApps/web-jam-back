{
  "plugins": ["node", "security", "jest"],
  "extends": ["plugin:node/recommended", "plugin:security/recommended", "airbnb", "plugin:jest/recommended"],
  "rules": {
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "comma-dangle": ["error", {
      "functions": "never"
    }],
    "max-len": ["error", {
      "code": 150
    }],
    "no-undef": [0, "never"],
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": 0,
    "no-mixed-operators": 0,
    "security/detect-unsafe-regex": 0,
    "security/detect-object-injection": 0,
    "prefer-destructuring": 0,
    "jest/valid-expect": 0,
    "one-var-declaration-per-line": [0, "never"],
    "one-var": [2, {
      "var": "never",
      "let": "always",
      "const": "never"
    }]
  }
}
