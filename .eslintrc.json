{
  "plugins": ["node", "security", "jest", "mocha"],
  "extends": ["plugin:mocha/recommended", "plugin:node/recommended", "plugin:security/recommended", "airbnb", "plugin:jest/recommended"],
  "rules": {
    "mocha/no-mocha-arrows": 0,
    "mocha/no-setup-in-describe": 0,
    "no-underscore-dangle": 0,
    "node/no-unsupported-features/es-syntax": 0,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-trailing-spaces": [0, {
      "skipBlankLines": true
    }],
    "one-var-declaration-per-line": [0, "never"],
    "one-var": [2, {
      "var": "never",
      "let": "always",
      "const": "never"
    }],
    "max-len": ["error", {
      "code": 150
    }]
  },
  "env": {
    "jest": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "chai": true,
    "mongoose": true,
    "bluebird": true,
    "chaiHttp": true
  }
}
