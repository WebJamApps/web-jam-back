{
  "resetMocks": true,
  "notify": false,
  "verbose": true,
  "bail": true,
  "testPathIgnorePatterns": ["/node_modules/", "/build", "/JaMmusic"],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "collectCoverage": true,
  "testEnvironment": "node",
  "testEnvironmentOptions":{
    "url": "http://localhost/"
  },
  "roots": ["<rootDir>/test"],
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "@sendgrid/mail":"<rootDir>/node_modules/@sendgrid/mail/$1",
    "^src/(.*)": "<rootDir>/src/$1",
    "@lib/(.*)": "<rootDir>/src/lib/$1"
  }
}
